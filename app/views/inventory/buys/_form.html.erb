<div class= "col-xs-3"></div>
<div class= "col-xs-6">

  <div class= "row">
    <%= render partial: "/shared/flash" %>
    <%= render partial: "/shared/errors", locals:{object: @inventory_buy } %>
  </div>
 
  <div class= "row well"> 

    <div class="form-group col-xs-4">
      <%= obj.label  t("views.fields.inventory.buy.quantity") %><br>
      <%= obj.number_field :quantity, class: "form-control", placeholder: "0", value:"", autofocus: true%>
    </div>
     
    <div class="form-group col-xs-4">
      <%= obj.label  t("views.fields.inventory.buy.buyprice") %><br>
      <%= obj.number_field :buyprice, class: "form-control", placeholder: "0.0", value:"" %>
    </div>
 
  </div>

  <div class= "row well"> 
    <div class="form-group col-xs-8">
      <%= obj.label t("views.fields.inventory.buy.description") %><br>
      <%= obj.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class= "row"> 
    <div class="col-xs-8">
      <%= obj.submit t("views.links.btn.save"), class: "btn btn-success" %>
      <%= link_to t("views.links.btn.back"), inventory_items_path, class: "btn btn-warning" %>
    </div>
  </div>

</div>