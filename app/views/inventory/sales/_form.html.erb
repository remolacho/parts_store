<div class= "col-xs-3"></div>
<div class= "col-xs-6">

  <div class= "row">
    <%= render partial: "/shared/flash" %>
    <%= render partial: "/shared/errors", locals:{object: @inventory_sale } %>
  </div>

  <%= obj.hidden_field :item_id,  value: @inventory_item.id %>

  <div class= "row well">
    <div class="form-group col-xs-6">
      <%= obj.label t("views.fields.inventory.sale.quantity") %><br>
      <%= obj.number_field :quantity, id: "txtquantity", autofocus: :true, placeholder: "0.0", value:"", class: "form-control" %>
    </div>

    <div class="form-group col-xs-6">
      <%= obj.label t("views.fields.inventory.stock.existence") %><br>
      <%= text_field_tag "existence", @inventory_stock ? @inventory_stock.existence : 0, readonly: :true, id: "txtexistence", class: "form-control" %>
    </div>

  </div>

  <div class= "row well">
    <div class="form-group col-xs-6">
     <%= obj.label t("views.fields.inventory.item.saleprice") %><br>
     <%= text_field_tag "price", @inventory_item.saleprice, readonly: :true, id: "txtprice", class: "form-control" %>
    </div>

    <div class="form-group col-xs-6">
       <%= obj.label t("views.fields.inventory.sale.amount") %><br>
       <%= obj.text_field :amount, readonly: :true, id: "txtamount", class: "form-control" %>
    </div>
  </div>

  <div class= "row"> 
    <div class="col-xs-8">
      <%= obj.submit t("views.links.btn.save"), class: "btn btn-success" %>
      <%= link_to t("views.links.btn.back"), inventory_items_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>
<%= javascript_include_tag 'inventory/sales', 'data-turbolinks-track' => true %>