<div class= "col-xs-3"></div>
<div class= "col-xs-6">

  <div class= "row">
    <%= render partial: "/shared/flash" %>
    <%= render partial: "/shared/errors", locals:{object: @inventory_item } %>
  </div>

  <div class= "row well">
    <div class="form-group col-xs-8">
      <%= obj.label  t("views.fields.inventory.item.category") %><br>
      <%= obj.select :category_id, options_for_select(@categories.collect{ |c| [c.longname, c.id] }, selected: @inventory_item.category_id),  {}, {class: 'form-control', id: "categories" } %>
    </div>
  </div>  
  
  <div class= "row well">
    <div class="form-group col-xs-8">
      <%= obj.label t("views.fields.inventory.item.name") %><br>
      <%= obj.text_field :name, class: "form-control" %>
    </div>
  </div>
 
  <div class= "row well"> 
    <div class="form-group col-xs-4">
      <%= obj.label  t("views.fields.inventory.item.costprice") %><br>
      <%= obj.number_field :costprice, class: "form-control" %>
    </div>
 
    <div class="form-group col-xs-4">
      <%= obj.label  t("views.fields.inventory.item.saleprice") %><br>
      <%= obj.number_field :saleprice, class: "form-control" %>
    </div>
  </div>

  <div class= "row well"> 
    <div class="form-group col-xs-8">
      <%= obj.label t("views.fields.inventory.item.description") %><br>
      <%= obj.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class= "row"> 
    <div class="col-xs-8">
      <%= obj.submit t("views.links.btn.save"), class: "btn btn-success" %>
      <%= link_to t("views.links.btn.back"), inventory_items_path, class: "btn btn-warning" %>
    </div>
  </div>

</div>