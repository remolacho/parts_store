<%= link_to t("views.links.btn.new_item"), new_inventory_item_path, class: "btn btn-primary" %>

<h1><%= t("views.titles.inventory.item.index") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("views.fields.inventory.item.name") %></th>
      <th><%= t("views.fields.inventory.item.description") %></th>
      <th><%= t("views.fields.inventory.item.costprice") %></th>
      <th><%= t("views.fields.inventory.item.saleprice") %></th>
      <th><%= t("views.fields.inventory.item.cdate") %></th>
      <th><%= t("views.fields.inventory.item.category") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_items.each do |inventory_item| %>
      <tr>
        <td><%= inventory_item.name %></td>
        <td><%= inventory_item.description %></td>
        <td><%= inventory_item.costprice %></td>
        <td><%= inventory_item.saleprice %></td>
        <td><%= inventory_item.cdate %></td>
        <td><%= inventory_item.category.longname %></td>
        <td><%= link_to t("views.links.btn.show"), inventory_item_path(inventory_item), class: "btn btn-default" %></td>
        <td><%= link_to t("views.links.btn.edit"), edit_inventory_item_path(inventory_item), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
