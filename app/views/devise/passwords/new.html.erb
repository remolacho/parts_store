<br><br><br><br>
<div class= "col-xs-4"></div>
<div class= "col-xs-4">
  <div class= "row">
    <%= render partial: "/shared/flash" %>
  </div>
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t("views.titles.access.password.new") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label t('views.fields.devise.password.email') %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <%= f.submit t('views.links.btn.send_me_reset_password_instructions'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>