<br><br><br><br>
<div class= "col-xs-4"></div>
<div class= "col-xs-4">
  <div class= "row">
    <%= render partial: "/shared/flash" %>
  </div>
  <%= bootstrap_devise_error_messages! %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t("views.titles.access.password.edit") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, role: "form" }) do |f| %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label t('views.fields.devise.password.new_pass') %>
          <%= f.password_field :password, autofocus: true, class: "form-control"  %>
        </div>

        <div class="form-group">
          <%= f.label t('views.fields.devise.password.conf_pass') %>
          <%= f.password_field :password_confirmation, class: "form-control"  %>
        </div>

        <%= f.submit t('views.links.btn.change_my_password'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>