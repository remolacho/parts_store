<br><br><br><br>
<div class= "col-xs-4"></div>
<div class= "col-xs-4">
  <div class= "row">
    <%= render partial: "/shared/flash" %>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= t("views.titles.access.session.new") %></h4>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label t('views.fields.devise.session.email') %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label t('views.fields.devise.session.password') %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="row">
             <div class="col-md-7">
              <div class="checkbox">
                <label>
                 <%= f.check_box :remember_me %>
                 <%= t('views.fields.devise.session.remember_me')  %>
                </label>
                <%= render "devise/shared/links" %>
                <%= f.submit  t('views.links.btn.sign_in'), class: "btn btn-primary col-md-9" %>
               </div>
             </div>      
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
